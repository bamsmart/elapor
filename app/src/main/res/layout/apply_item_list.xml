<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/rect" >

        <ImageView
            android:id="@+id/hapus"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/cross"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />

        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/userdefault"
            android:scaleType="fitXY"
            android:layout_marginRight="10dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:layout_centerVertical="true">

            <customfonts.MyTextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Atlit"
                android:textSize="15dp"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <customfonts.MyTextView
                android:id="@+id/sex_bod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama"
                android:text="Putra, 13-09-1981"
                android:textSize="@dimen/textsub"
                android:textColor="@color/Tex"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp" />

            <customfonts.MyTextView
                android:id="@+id/label_wtf_gal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sex_bod"
                android:text="Kategori:"
                android:paddingRight="5dp"
                android:textSize="@dimen/textsub"
                android:textColor="@color/textSub" />

            <customfonts.MyTextView
                android:id="@+id/wtf_gal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/label_wtf_gal"
                android:layout_toRightOf="@+id/label_wtf_gal"
                android:text="#11002"
                android:textSize="@dimen/textsub"
                android:textColor="@color/Tex"
                android:textStyle="bold"  />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>