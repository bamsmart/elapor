<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp" >

    <LinearLayout
        android:id="@+id/linear_kategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/Tex">

            <customfonts.MyTextView
                android:id="@+id/label_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KATEGORI:"
                android:textSize="@dimen/textsub"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="5dp" />

            <customfonts.MyTextView
                android:id="@+id/judul_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KYORUGI CADET PUTRA U45"
                android:textSize="@dimen/textsub"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="5dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_tipe_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >


                <customfonts.MyTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Canvera Black Heel"
                    android:textSize="15dp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@+id/download"
                    android:layout_toStartOf="@+id/download"
                    android:paddingRight="5dp" />

                <customfonts.MyTextView
                    android:id="@+id/keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:text="@string/listdata_alamat"
                    android:textSize="@dimen/textsub"
                    android:textColor="@color/textSub"
                    android:layout_toLeftOf="@+id/download"
                    android:layout_toStartOf="@+id/download"
                    android:paddingTop="3dp"
                    android:paddingRight="5dp" />

                <customfonts.MyTextView
                    android:id="@+id/download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_preorder"
                    android:text="DOWNLOAD"
                    android:layout_marginTop="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#fff"
                    android:textSize="@dimen/textsub" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear_tipe_rangking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/rect" >

        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/userdefault"
            android:layout_marginRight="5dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image" >

            <customfonts.MyTextView
                android:id="@+id/number_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:text="Rank 10"
                android:textSize="@dimen/textsub"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@drawable/cartnumberbg"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <customfonts.MyTextView
                android:id="@+id/kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="POOMSAE JUNOIR PUTRA INDIVIDU"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:textSize="@dimen/textsub"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/number_rank" />

            <customfonts.MyTextView
                android:id="@+id/label_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kategori"
                android:text="Team:"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:textSize="@dimen/textsub"
                android:textColor="@color/textSub"
                android:layout_alignParentLeft="true" />

            <customfonts.MyTextView
                android:id="@+id/team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/label_team"
                android:layout_toRightOf="@+id/label_team"
                android:paddingTop="3dp"
                android:text="Nama Team / Club"
                android:textSize="@dimen/textsub"
                android:textColor="@color/Tex"
                android:textStyle="bold"
                android:layout_alignParentRight="true" />

            <customfonts.MyTextView
                android:id="@+id/label_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/team"
                android:text="Nama:"
                android:paddingTop="3dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textSize="@dimen/textsub"
                android:textColor="@color/textSub"
                android:layout_alignParentLeft="true"  />

            <elapor.application.com.libs.ExpandableHeightListView
                android:id="@+id/listview_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/label_nama"
                android:layout_toRightOf="@+id/label_nama"
                android:divider="@null"
                android:paddingBottom="5dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
