<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/rect" >

            <elapor.application.com.libs.ResizableImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/shoppy_logo"
                android:layout_marginRight="10dp" />

            <customfonts.MyTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:text="Judul Event Prestasi"
                android:textSize="15dp"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <customfonts.MyTextView
                android:id="@+id/kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/title"
                android:paddingTop="2dp"
                android:text="JUNIOR CADET U45"
                android:textSize="@dimen/textsub"
                android:textColor="@color/Tex"
                android:textStyle="bold"  />

            <customfonts.MyTextView
                android:id="@+id/label_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/kategori"
                android:text="Nama:"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:textSize="@dimen/textsub"
                android:textColor="@color/textSub" />

            <customfonts.MyTextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/label_nama"
                android:layout_toRightOf="@+id/label_nama"
                android:paddingTop="5dp"
                android:text="RIFKI HERU"
                android:textSize="@dimen/textsub"
                android:textColor="@color/Tex"
                android:textStyle="bold"  />

            <customfonts.MyTextView
                android:id="@+id/label_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/nama"
                android:text="Team:"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:textSize="@dimen/textsub"
                android:textColor="@color/textSub" />

            <customfonts.MyTextView
                android:id="@+id/team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/label_team"
                android:layout_toRightOf="@+id/label_team"
                android:paddingTop="2dp"
                android:text="event TKD"
                android:textSize="@dimen/textsub"
                android:textColor="@color/Tex"
                android:textStyle="bold" />

            <customfonts.MyTextView
                android:id="@+id/label_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/image"
                android:layout_below="@+id/team"
                android:text="Ranking:"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:textSize="@dimen/textsub"
                android:textColor="@color/textSub" />

            <customfonts.MyTextView
                android:id="@+id/number_rank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/label_ranking"
                android:layout_toRightOf="@+id/label_ranking"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:text="1"
                android:textSize="@dimen/textsub"
                android:textColor="@color/Tex"
                android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>