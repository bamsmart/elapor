<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="5dp"
    android:paddingLeft="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp" >

        <com.alexzh.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/userdefault"
            android:layout_marginRight="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image" >
            
            <customfonts.MyTextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Peserta"
                android:paddingTop="10dp"
                android:textSize="15dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <customfonts.MyTextView
                android:id="@+id/lokasi_kerja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama"
                android:paddingTop="2dp"
                android:text="DIC Pulogadung"
                android:textSize="@dimen/textsub"
                android:textColor="@color/Tex"
                android:textStyle="bold" />
            
            <LinearLayout
                android:id="@+id/jenis_kelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:layout_below="@+id/lokasi_kerja"
                android:orientation="horizontal">

                <customfonts.MyTextView
                    android:id="@+id/laki_laki"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:text="Laki-laki"
                    android:padding="3dp"
                    android:textSize="@dimen/textsub"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/bg_preorder"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" />

                <customfonts.MyTextView
                    android:id="@+id/perempuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Perempuan"
                    android:textSize="@dimen/textsub"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@drawable/kirimpesanbg"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"
            android:layout_below="@+id/image"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</LinearLayout>