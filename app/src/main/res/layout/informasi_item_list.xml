<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rect" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <elapor.application.com.libs.ResizableImageView
                    android:id="@+id/image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/shoppy_logo"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:id="@+id/btn_play"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/play_button"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                    <customfonts.MyTextView
                        android:id="@+id/laporan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Canvera Black Heel"
                        android:textSize="@dimen/text"
                        android:textColor="@color/red"
                        android:textStyle="bold"  />

                <customfonts.MyTextView
                    android:id="@+id/kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/laporan"
                    android:text="Keluhan Pelanggan"
                    android:textSize="@dimen/textsub"
                    android:textColor="@color/Tex"
                    android:textStyle="bold" />

                <customfonts.MyTextView
                    android:id="@+id/tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kategori"
                    android:text="04.03.2017"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/textsub"
                    android:textColor="@color/Tex" />

                <customfonts.MyTextView
                    android:id="@+id/pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tanggal"
                    android:text="PIC: "
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:textSize="@dimen/textsub"
                    android:textColor="@color/Tex"
                    android:textStyle="bold" />

                <customfonts.MyTextView
                    android:id="@+id/area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pic"
                    android:text="Area: "
                    android:paddingRight="5dp"
                    android:textSize="@dimen/textsub"
                    android:textColor="@color/Tex"
                    android:textStyle="bold" />

                <customfonts.MyTextView
                    android:id="@+id/no_temuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/area"
                    android:text="No. Temuan: AK-1289-2018"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:textSize="13sp"
                    android:textColor="@color/actionbar"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/linear_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/no_temuan"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <customfonts.MyTextView
                        android:id="@+id/menunggu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menunggu"
                        android:textSize="@dimen/textsub"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/btn_red"
                        android:padding="5dp" />

                    <customfonts.MyTextView
                        android:id="@+id/proses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proses"
                        android:textSize="@dimen/textsub"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/btn_greenonion"
                        android:padding="5dp" />

                    <customfonts.MyTextView
                        android:id="@+id/selesai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selesai"
                        android:textSize="@dimen/textsub"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/btn_blue"
                        android:padding="5dp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>