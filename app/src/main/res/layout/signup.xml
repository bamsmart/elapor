<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg3"
            android:scaleType="centerCrop" />
        
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/linear"
        android:layout_marginBottom="30dp" >

        <ImageView
            android:id="@+id/head"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/logo"
            android:textColor="@color/Tex"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/signin1"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp" >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext">

            <customfonts.MyEditText
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Team"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:textColorHint="@color/textSub"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingStart="14dp"
                android:gravity="left"
                android:lines="1"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="17dp"
                android:id="@+id/edit_nama" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="@color/red" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext">

            <customfonts.MyEditText
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:textColorHint="@color/textSub"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="14dp"
                android:gravity="left"
                android:lines="1"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="12dp"
                android:id="@+id/edit_email" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="@color/red"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext">

            <customfonts.MyEditText
                android:textSize="@dimen/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:textColorHint="@color/textSub"
                android:textColor="@color/Tex"
                android:background="#0000"
                android:padding="14dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/pass"
                android:drawablePadding="19dp"
                android:id="@+id/edit_password" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:background="@color/red"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:visibility="invisible" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="50dp" >

                <CheckBox
                    android:id="@+id/checkbox_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:buttonTint="@color/textSub" />

                <customfonts.MyTextView
                    android:id="@+id/remember"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Setuju"
                    android:textColor="@color/textSub"
                    android:layout_gravity="center"
                    android:textSize="@dimen/textsub" />

            </LinearLayout>

            <customfonts.MyTextView
                android:id="@+id/termc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tandc"
                android:textColor="@color/red"
                android:layout_gravity="center"
                android:textSize="@dimen/textsub"
                android:gravity="right"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
    </LinearLayout>

    <customfonts.MyTextView
        android:layout_above="@+id/signupline"
        android:id="@+id/signin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect1"
        android:text="Buat Akun"
        android:textSize="@dimen/text"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="12dp"
        android:layout_marginBottom="26dp"
        android:elevation="1.5dp" />

    <LinearLayout
        android:id="@+id/signupline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="35dp" >

        <customfonts.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah punya akun?"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@color/textSub"
            android:textSize="@dimen/textsub"
            android:layout_marginRight="3dp" />

        <customfonts.MyTextView
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signin"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/textsub"
            android:layout_marginLeft="3dp" />

    </LinearLayout>

</RelativeLayout>



